{
  "$id": "/schema/closure",
  "type": "object",
  "allOf": [
    {
      "if": {
        "properties": {
          "closure_type": {
            "pattern": "open_on_transfer|OPEN"
          }
        }
      },
      "then": {
        "properties": {
          "closure_period": {
            "type": [
              "number",
              "null"
            ],
            "maximum": 0
          },
          "closure_start_date": {
            "type": [
              "string",
              "null"
            ],
            "maxLength": 0
          },
          "foi_exemption_asserted": {
            "type": [
              "string",
              "null"
            ],
            "maxLength": 0
          },
          "foi_exemption_code": {
            "type": [
              "array",
              "null",
              "string"
            ],
            "maxLength": 0,
            "maxItems": 0
          }
        }
      },
      "else": {
        "properties": {
          "foi_exemption_asserted": {
            "type": "string",
            "pattern": "^(0?[1-9]|[12][0-9]|3[01])[\\/\\-](0?[1-9]|1[012])[\\/\\-]\\d{4}$|\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d(?:\\.\\d+)?Z?"
          },
          "foi_exemption_code": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "$ref": "file:./metadata-schema/definitionsSchema.schema.json#/definitions/foi_codes"
            }
          },
          "closure_type": {
            "enum": [
              "closed_review",
              "closed_for",
              "normal_closure_before_foi",
              "closed_until",
              "closed_access_reviewed",
              "reclosed_in",
              "CLOSED"
            ]
          },
          "closure_period": {
            "type": "number",
            "minimum": 1
          },
          "closure_start_date": {
            "type": "string",
            "pattern": "^(0?[1-9]|[12][0-9]|3[01])[\\/\\-](0?[1-9]|1[012])[\\/\\-]\\d{4}$|\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d(?:\\.\\d+)?Z?"
          },
          "description_closed": {
            "enum": [
              "TRUE",
              "true",
              "FALSE",
              "false"
            ]
          },
          "title_closed": {
            "type": "boolean"
          }
        },
        "required": [
          "closure_period",
          "closure_start_date",
          "description_closed",
          "foi_exemption_asserted",
          "foi_exemption_code",
          "title_closed"
        ]
      }
    }
  ]
}
