{
  "$id": "/schema/closed-closure",
  "type": "object",
  "properties": {
    "closure_type": {
      "enum": ["Closed", "closed", "CLOSED"]
    },
    "closure_start_date": {
      "type": "string",
      "format": "date"
    },
    "closure_period": {
      "type": "integer",
      "minimum": 1
    },
    "foi_exemption_code": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "$ref": "classpath:/metadata-schema/definitionsSchema.schema.json#/definitions/foi_codes"
      }
    },
    "foi_exemption_asserted": {
      "type": "string",
      "format": "date"
    },
    "title_closed": {
      "type": "boolean"
    },
    "description_closed": {
      "type": "boolean"
    },
    "title_alternate": {
      "type": ["string", "null"]
    },
    "description_alternate": {
      "type": ["string", "null"]
    }
  },
  "required": [
    "closure_type",
    "closure_start_date",
    "closure_period",
    "foi_exemption_code",
    "foi_exemption_asserted",
    "title_closed",
    "description_closed"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "title_closed": { "const": true }
        },
        "required": ["title_closed"]
      },
      "then": {
        "required": ["title_alternate"]
      }
    },
    {
      "if": {
        "properties": {
          "description_closed": { "const": true }
        },
        "required": ["description_closed"]
      },
      "then": {
        "required": ["description_alternate"]
      }
    }
  ]
}
