{
  "$id": "/schema/closed-closure",
  "type": "object",
  "allOf": [
    {
      "if": {
        "properties": {
          "closure_type": {
            "const": "Closed"
          }
        }
      },
      "then": {
        "properties": {
          "closure_start_date": {
            "type": "string"
          },
          "closure_period": {
            "type": "array",
            "minItems": 1
          },
          "foi_exemption_code": {
            "type": "array",
            "minItems": 1
          },
          "foi_exemption_asserted": {
            "type": "string"
          },
          "title_closed": {
            "type": "boolean"
          },
          "description_closed": {
            "type": "boolean"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "title_closed": { "const": true }
              }
            },
            "required": ["title_closed"],
            "then": {
              "required": ["title_alternate"],
              "properties": {
                "title_alternate": {
                  "type": "string"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "description_closed": { "const": true }
              }
            },
            "required": ["description_closed"],
            "then": {
              "required": ["description_alternate"],
              "properties": {
                "description_alternate": {
                  "type": "string"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "description_alternate": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "then": {
              "properties": {
                "description_closed": {
                  "const": true
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "title_alternate": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "then": {
              "properties": {
                "title_closed": {
                  "const": true
                }
              }
            }
          }
        ]
      }
    }
  ]
}
