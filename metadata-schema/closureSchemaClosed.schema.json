{
  "$id": "/schema/closed-closure",
  "type": "object",
  "allOf": [
    {
      "if": {
        "properties": {
          "closure_type": {
            "enum": ["Closed", "closed", "CLOSED"]
          }
        }
      },
      "then": {
        "properties": {
          "closure_start_date": {
            "type": "string"
          },
          "closure_period": {
            "type": "integer"
          },
          "foi_exemption_code": {
            "type": "array"
          },
          "foi_exemption_asserted": {
            "type": "string"
          },
          "title_closed": {
            "type": "boolean"
          },
          "description_closed": {
            "type": "boolean"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "title_closed": { "const": true }
              }
            },
            "then": {
              "required": ["title_alternate"],
              "properties": {
                "title_alternate": {
                  "type": "string"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "description_closed": { "const": true }
              }
            },
            "then": {
              "required": ["description_alternate"],
              "properties": {
                "description_alternate": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
